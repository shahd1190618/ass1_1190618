<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".study">

<LinearLayout
    android:layout_width="442dp"
    android:layout_height="770dp"
    android:layout_gravity="top"
    android:background="#7DD4DF"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="#554D07"
            android:text="For 4th grade"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#E9F6F5"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:textStyle="normal|bold|italic" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/dexterlab" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="385dp"
        android:layout_height="80dp"
        android:background="#DAE662"
        android:text="Here are the types of living things,ypu can learn more about the animals ,press on the photot to see"
        android:textSize="20sp"
        android:textStyle="normal|bold|italic" />


    <TextView
        android:id="@+id/abouttxtview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:text="Discover the wonders of science with our interactive learning app! Explore fascinating topics, engage in hands-on activities, and embark on exciting adventures in the world of science"
        android:textSize="16sp"
        android:textStyle="normal|bold|italic"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/animalsbtn"
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:onClick="onClick"
            app:srcCompat="@drawable/animals" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/plants" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ff" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/tt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/bb" />
    </LinearLayout>

</LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>