<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="442dp"
        android:layout_height="770dp"
        android:layout_gravity="top"
        android:background="#7DD4DF"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="#554D07"
            android:text="For 4th grade"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#E9F6F5"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:textStyle="normal|bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center|top"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/dexterlab" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:background="#FFEB3B"
            android:text="SciCraft: Explore, Discover, Create"
            android:textColor="#195A8E"
            android:textColorHighlight="#213CD3"
            android:textColorHint="#F3F2EE"
            android:textColorLink="#EFE6E6"
            android:textSize="24sp"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="#F8F6F6"
            android:text="Welcome to the world of science exploration"
            android:textColor="#1B0505"
            android:textColorHint="#F44336"
            android:textSize="16sp"
            android:textStyle="bold|italic" />


        <Button
            android:id="@+id/aboutbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="#203297"
            android:onClick="onClick"
            android:text="About" />

        <TextView
            android:id="@+id/abouttxtview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:text="Discover the wonders of science with our interactive learning app! Explore fascinating topics, engage in hands-on activities, and embark on exciting adventures in the world of science"
            android:textSize="16sp"
            android:textStyle="normal|bold|italic"
            android:visibility="gone" />

        <Button
            android:id="@+id/studybtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="#203297"
            android:onClick="onClick"
            android:text="Study" />

        <Button
            android:id="@+id/quizbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="#203297"
            android:text=" Quiz " />

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>