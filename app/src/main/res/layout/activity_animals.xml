<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".animals">
    <LinearLayout
        android:layout_width="442dp"
        android:layout_height="770dp"
        android:layout_gravity="top"
        android:background="#7DD4DF"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:background="#203297"
            android:backgroundTint="#203297"
            android:text="Classification of Animals"
            android:textColor="#F6F1F1"
            android:textSize="34sp"
            android:textStyle="normal|bold|italic" />

        <Button
            android:id="@+id/Vertebratesbtn"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="25dp"
            android:backgroundTint="#203297"
            android:onClick="onClick"
            android:text="Vertebrates"
            android:textSize="34sp"
            android:textStyle="normal|bold|italic" />

        <Button
            android:id="@+id/Invertebratesbtn"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="100dp"
            android:backgroundTint="#203297"
            android:onClick="onClick"
            android:text="Invertebrates"
            android:textSize="34sp"
            android:textStyle="normal|bold|italic" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>